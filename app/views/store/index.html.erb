<% if notice %>
<p id="notice" ><%= notice %></p>
<% end %>
<h1>Dog Services Catalogue</h1>
<% @products.each do |product| %>
<div class="entry" >
<%= image_tag(product.image_url) %>
<h3><%= product.title %></h3>

<!--allows us to safely
add HTML stylings to make the descriptions more interesting for our customers.
-->
<%= sanitize(product.description) %>
<div class="price_line" >
<span class="price" ><%= product.price %></span>
</div>
</div>
<% end %>