<h1>Listing users</h1>
 <% if notice %>
 <p id="notice"><%= notice %></p>
 <% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Password </th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.password %></td>



<% if can? :show, @user %>
    <td><%= link_to 'Show', user %></td>
<%end%>


<% if can? :edit, @user %>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
<%end%>


<% if can? :destroy, @user%>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
<%end%>
  </tr>
</table>
<br/>


<% if can? :create, @user%>
<%= link_to 'New User', new_user_path %>
<%end%>
<%end%>